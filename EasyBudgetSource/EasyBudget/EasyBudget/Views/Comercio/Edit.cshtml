@model EasyBudget.Models.ComerciosViewModel

@{
	ViewBag.Title = "Editar Comercio";
}

<div class="row">
	<div class="col-sm-12 col-md-12">
		<div class="card mt-2">
			<div class="card-body">
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()

					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.ComercioId)

					<div class="col-sm-12 col-md-5 alinear">
						<div class="clearfix"></div>
						<div class="form-group">
							@Html.LabelFor(model => model.ComercioNombre, htmlAttributes: new { @class = "control-label" })
							<div class="col-md-10">
								@Html.EditorFor(model => model.ComercioNombre, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.ComercioNombre, "", new { @class = "text-danger" })
							</div>
						</div>
					</div>

					<div class="col-sm-12 col-md-5 alinear">
						<div class="clearfix"></div>
						<div class="form-group">
							@Html.LabelFor(model => model.ComercioUbicacion, htmlAttributes: new { @class = "control-label" })
							<div class="col-md-10">
								@Html.EditorFor(model => model.ComercioUbicacion, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.ComercioUbicacion, "", new { @class = "text-danger" })
							</div>
						</div>
					</div>
					<div class="col-md-12 col-sm-12">				
						<div class="float-right">
							<input type="submit" value="Guardar" class="btn btn-info btn-md" />
							<a href="@Url.Action("Index", new { id = Model.ComercioId })" class="btn btn-danger btn-md">Cancelar</a>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
