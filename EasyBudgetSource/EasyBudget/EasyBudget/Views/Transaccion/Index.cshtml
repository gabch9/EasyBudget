@model IEnumerable<EasyBudget.Models.TransaccionViewModel>

@{
	ViewBag.Title = "Lista Transacciones";
}
<div class="row">
	<div class="col-sm-12 col-md-12">
		<a href="@Url.Action("Create")" class="btn btn-info float-right">
			<span class="fa fa-plus-circle"></span> Nuevo
		</a>
	</div>
	<div class="col-sm-12 col-md-12">
		<div class="card mt-2">
			<div class="card-body">
				<div class="table-responsive text-center">
					<table class="table table-hover">
						<thead class="thead-light">
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.TransaccionDescripcion)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.FkIdComercio)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.TransaccionValor)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.TransaccionFecha)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.FkIdTipoTransaccion)
								</th>
								<th></th>
							</tr>
						</thead>
						@foreach (var item in Model)
						 {
							<tbody>
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.TransaccionDescripcion)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.FkIdComercio)
									</td>
									<td>
										₡@Html.DisplayFor(modelItem => item.TransaccionValor)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.TransaccionFecha)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.FkIdTipoTransaccion)
									</td>
									<td>
										<a href="@Url.Action("Details", new { id = item.TransaccionId })" class="btn btn-info btn-sm">Detalles</a>
										<a href="@Url.Action("Delete", new { id = item.TransaccionId })" class="btn btn-danger btn-sm mt-1">Eliminar</a>
									</td>
								</tr>
							</tbody>
						 }
					</table>
				</div>
			</div>
		</div>
	</div>
</div>