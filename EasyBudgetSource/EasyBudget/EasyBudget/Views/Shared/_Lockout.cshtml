<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, user-scalable=no,initial-scale=1.0">
	<meta http-equiv="content-type" content="text/html; charset=UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>@ViewBag.Title - Easy Budget</title>

	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/font-awesome.css")
	@Styles.Render("~/Content/bootstrap.css")
	@Scripts.Render("~/Scripts/jquery-3.3.1.js")
	@Scripts.Render("~/Scripts/modernizr-2.8.3.js")
	@Scripts.Render("~/Scripts/Chart.js")
	@Scripts.Render("~/Scripts/bootstrap.js")
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="50">
	<div class="row">
		<div class="col-md-12 col-sm-12">
			@Html.Partial("_MenuResponsive")
			<section class="d-flex">
				<div class="main-wrapper">
					<div class="col-md-12 col-sm-12">
						@RenderBody()
						<hr />
						<footer class="bg-color">
							<div id="section3" class="container-fluid mt-5">
								<div class="col-md-12 col-sm-12">
									<div>
										<br /><h3>Informaci&oacute;n de Contacto</h3>
										<hr />
										<span class="fa fa-phone-square icon-menu link">  (+506) 2222 2222</span><hr />
										<span class="fa fa-envelope icon-menu link"> Info@easybudget.com</span><hr />
										<span class="fa fa-map-marker icon-menu"> Costa Rica</span>
										<div class="float-right">
											<a class="link" href="https://www.facebook.com/login/"><span class="fa fa-facebook-square fa-3x"></span></a>
											<a class="link" href="https://twitter.com/login/"><span class="fa fa-twitter-square fa-3x"></span></a>
											<a class="link" href="https://www.linkedin.com/"><span class="fa fa-linkedin-square fa-3x"></span></a>
										</div>
									</div>
								</div>
							</div>
							<br /><p class="text-center">&copy; @DateTime.Now.Year - Easy Budget</p>
						</footer>
					</div>
				</div>
			</section>
		</div>
	</div>

	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>