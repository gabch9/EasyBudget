@model IEnumerable<EasyBudget.Models.PersonasViewModel>

@{
	ViewBag.Title = "Lista Personas";
}
<div class="row">
	<div class="col-sm-12 col-md-12">
		<a href="@Url.Action("Create")" class="btn btn-primary float-right">
			<span class="fa fa-plus-circle"></span> Nuevo
		</a>
	</div>
	<div class="col-sm-12 col-md-12">
		<div class="card mt-2">
			<div class="card-body">
				<div class="table-responsive text-center">
					<table class="table table-hover">
						<thead class="thead-light">
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.PersonaNombre)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PersonaApellido)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PersonaFechaNacimiento)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PersonaOcupacion)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PersonaPais)
								</th>
								<th></th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.PersonaNombre)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PersonaApellido)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PersonaFechaNacimiento)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PersonaOcupacion)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PersonaPais)
									</td>
									<td>
										<a href="@Url.Action("Details", new { id = item.PersonaId })" class="btn btn-info btn-sm">Detalles</a>
										<a href="@Url.Action("Delete", new { id = item.PersonaId })" class="btn btn-danger btn-sm">Eliminar</a>
									</td>
								</tr>
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</div>
</div>